<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/svv">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="left"
        android:id="@+id/img_ads"
        android:src="@drawable/employ"
        android:scaleType="fitXY"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:elevation="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:text="2 ساعت پیش"
        android:padding="4dp"
        android:textColor="#0b0b0b"
        android:textSize="14sp"
        android:background="#2bff00" />

    <View
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@color/view" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop ="20dp"
        android:background="#ff6600"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_subtitle"
        android:paddingBottom="4dp"
        android:textColor="@color/back"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:background="#ff6f00" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_degree"
        android:textColor="@color/back"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:background="#ff7300"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_city"
        android:paddingBottom="4dp"
        android:textColor="@color/back"
        android:textSize="19sp"
        android:layout_gravity="right"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:background="#ff8000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_description"
        android:text=""
        android:paddingBottom="4dp"
        android:textColor="@color/back"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:background="#ff8800"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />
    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:background="#ff9100"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:paddingBottom="4dp"
        android:background="#ff9500"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

</LinearLayout>

</ScrollView>